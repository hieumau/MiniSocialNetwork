<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenFilter</filter-name>
        <filter-class>sample.filter.AuthenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>sample.controller.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateUserAccountController</servlet-name>
        <servlet-class>sample.account.controller.CreateUserAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>sample.account.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>sample.account.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostArticleController</servlet-name>
        <servlet-class>sample.article.controller.PostArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewArticleDetailController</servlet-name>
        <servlet-class>sample.article.controller.ViewArticleDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostCommentController</servlet-name>
        <servlet-class>sample.comment.controller.PostCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReactController</servlet-name>
        <servlet-class>sample.emotion.controller.ReactController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewHomePageController</servlet-name>
        <servlet-class>sample.article.controller.ViewHomePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewNotificationController</servlet-name>
        <servlet-class>sample.notification.controller.ViewNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClickNotificationController</servlet-name>
        <servlet-class>sample.notification.controller.ClickNotificationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResendVerifyCodeController</servlet-name>
        <servlet-class>sample.account.controller.ResendVerifyCodeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyAccountController</servlet-name>
        <servlet-class>sample.account.controller.VerifyAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticleController</servlet-name>
        <servlet-class>sample.article.controller.DeleteArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCommentController</servlet-name>
        <servlet-class>sample.comment.controller.DeleteCommentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateUserAccountController</servlet-name>
        <url-pattern>/CreateUserAccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostArticleController</servlet-name>
        <url-pattern>/PostArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewArticleDetailController</servlet-name>
        <url-pattern>/ViewArticleDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostCommentController</servlet-name>
        <url-pattern>/PostCommentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReactController</servlet-name>
        <url-pattern>/ReactController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewHomePageController</servlet-name>
        <url-pattern>/ViewHomePageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewNotificationController</servlet-name>
        <url-pattern>/ViewNotificationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClickNotificationController</servlet-name>
        <url-pattern>/ClickNotificationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResendVerifyCodeController</servlet-name>
        <url-pattern>/ResendVerifyCodeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyAccountController</servlet-name>
        <url-pattern>/VerifyAccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteArticleController</servlet-name>
        <url-pattern>/DeleteArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCommentController</servlet-name>
        <url-pattern>/DeleteCommentController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
